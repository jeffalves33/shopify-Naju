      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url }}">
    {% endif %}
  </head>

  <body>
    {% section 'header-naju' %}
    <main>
      {{ content_for_layout }}
    </main>
    {% section 'footer-naju' %}

    <a
      class="naju-wa"
      href="https://wa.me/55SEUNUMEROAQUI?text=Ol%C3%A1%21%20Quero%20tirar%20uma%20d%C3%BAvida."
      target="_blank"
      rel="noopener"
      aria-label="WhatsApp"
    >
      <span class="naju-wa__dot"></span>
      WhatsApp
    </a>
  </body>
</html>
