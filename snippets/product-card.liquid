<a href="{{ product.url }}" class="product-card">
  <div class="product-card__image">
    <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
  </div>

  <div class="product-card__info">
    <h3>{{ product.title }}</h3>
    <p class="price">{{ product.price | money }}</p>
  </div>
</a>
